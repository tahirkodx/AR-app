{
    "compilerOptions": {
        "target": "ES6",
        "baseUrl": ".",
        "paths": {
            "@component/*": [
                "src/component/*"
            ],
            "@components/*": [
                "src/components/*"
            ],
            "@utils/*": [
                "src/utils/*"
            ],
            "@styles/*": [
                "src/styles/*"
            ],
            "@theme/*": [
                "src/theme/*"
            ],
            "@layout/*": [
                "src/layout/*"
            ],
            "@provider/*": [
                "src/provider/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ]
}